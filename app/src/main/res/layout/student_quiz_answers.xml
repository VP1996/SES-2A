                <RadioButton
                    android:id="@+id/radioBtn_scenario2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree. It is their responsibility to complete the task."/>

                <RadioButton
                    android:id="@+id/radioBtn_scenario2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggest to bring this up to the rest of the group so that the task will be divided fairly among the group."/>
